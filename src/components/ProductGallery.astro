  <div class="gallery-cta">
    <a href="/shop" class="btn-primary">Shop BGP Gear</a>
  </div>
</section>

<style>
  .product-gallery-section {
    padding: 4rem 5%;
    background-color: var(--light-gray); /* A light background for contrast */
    text-align: center;
  }

  .gallery-title {
    font-family: var(--font-heading);
    font-size: 48px;
    font-weight: 700;
    color: var(--deep-charcoal);
    margin-bottom: 2rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto 3rem auto; /* Add margin below grid for button */
  }

  .gallery-grid img {
    width: 100%;
    height: 250px; /* Fixed height for consistency */
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .gallery-grid img:hover {
    transform: translateY(-5px);
  }

  .gallery-cta .btn-primary {
    background-color: var(--golden-yellow);
    color: var(--deep-charcoal);
    padding: 16px 32px;
    border-radius: 6px;
    border: none;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(244, 208, 63, 0.3);
  }

  .gallery-cta .btn-primary:hover {
    background-color: var(--light-yellow);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(244, 208, 63, 0.4);
  }

  @media (max-width: 768px) {
    .gallery-title {
      font-size: 38px;
    }
    .gallery-grid {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    }
  }

  @media (max-width: 480px) {
    .gallery-title {
      font-size: 32px;
    }
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>