---
// src/components/Footer.astro
// BGP Shop Footer Component
---

<footer class="site-footer">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Company Info Column -->
      <div class="footer-column">
        <h3 class="footer-title">BGP Shop</h3>
        <p class="footer-description">
          Where positivity meets everyday style. Discover clothing and accessories 
          that celebrate community, joy, and the beauty of everyday moments.
        </p>
        <div class="footer-contact">
          <p class="contact-item">
            <span class="contact-label">Email:</span>
            <a href="mailto:shop@bgpnc.com" class="contact-link">shop@bgpnc.com</a>
          </p>
        </div>
      </div>

      <!-- Quick Links Column -->
      <div class="footer-column">
        <h3 class="footer-title">Quick Links</h3>
        <ul class="footer-links">
          <li><a href="/shipping" class="footer-link">Shipping Info</a></li>
          <li><a href="/returns" class="footer-link">Returns & Exchanges</a></li>
          <li><a href="/size-guide" class="footer-link">Size Guide</a></li>
          <li><a href="/faq" class="footer-link">FAQ</a></li>
          <li><a href="/about" class="footer-link">About Us</a></li>
          <li><a href="/contact" class="footer-link">Contact</a></li>
        </ul>
      </div>

      <!-- Connect Column -->
      <div class="footer-column">
        <h3 class="footer-title">Connect With Us</h3>
        
        <!-- Newsletter Signup -->
        <div class="newsletter-signup">
          <p class="newsletter-text">Join the Positivity Club</p>
          <form class="newsletter-form">
            <div class="newsletter-input-group">
              <input 
                type="email" 
                class="newsletter-input"
                placeholder="Enter your email" 
                aria-label="Email address"
                required
              />
              <button type="submit" class="newsletter-button">Subscribe</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-copyright">
        <p>&copy; 2025 BGP Shop. All rights reserved.</p>
      </div>
      <div class="footer-legal">
        <a href="/privacy" class="legal-link">Privacy Policy</a>
        <a href="/terms" class="legal-link">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer Variables */
  :root {
    --primary-teal: #4A9B8E;
    --light-teal: #7BC4B8;
    --golden-yellow: #F4D03F;
    --light-yellow: #F7DC6F;
    --deep-charcoal: #2C3E50;
    --soft-cream: #F8F6F0;
    --soft-coral: #FF6B6B;
  }

  /* Footer Base Styles */
  .site-footer {
    background: linear-gradient(135deg, var(--deep-charcoal) 0%, #1a252f 100%);
    color: var(--soft-cream);
    padding: 60px 0 20px;
    border-top: 4px solid var(--golden-yellow);
    box-shadow: 0 -4px 20px rgba(230, 184, 0, 0.15);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Footer Main Content */
  .footer-main {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  .footer-column {
    min-width: 0;
  }

  .footer-title {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 18px;
    font-weight: 600;
    color: var(--golden-yellow);
    margin-bottom: 20px;
    text-shadow: 0 0 15px rgba(230, 184, 0, 0.4);
  }

  .footer-description {
    font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 20px;
    color: var(--soft-cream);
  }

  /* Contact Info */
  .footer-contact {
    margin-top: 15px;
  }

  .contact-item {
    margin-bottom: 10px;
    font-size: 14px;
  }

  .contact-label {
    font-weight: 600;
    color: var(--golden-yellow);
  }

  .contact-link {
    color: var(--primary-teal);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .contact-link:hover {
    color: var(--golden-yellow);
    text-shadow: 0 0 12px rgba(230, 184, 0, 0.6);
  }

  /* Footer Links */
  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 12px;
  }

  .footer-link {
    color: var(--soft-cream);
    text-decoration: none;
    font-size: 14px;
    font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: var(--golden-yellow);
    text-shadow: 0 0 10px rgba(230, 184, 0, 0.5);
  }

  /* Newsletter Signup */
  .newsletter-signup {
    margin-bottom: 30px;
  }

  .newsletter-text {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 15px;
    color: var(--golden-yellow);
    text-shadow: 0 0 8px rgba(230, 184, 0, 0.3);
  }

  .newsletter-input-group {
    display: flex;
    border-radius: 6px;
    overflow: hidden;
    border: 2px solid var(--golden-yellow);
    box-shadow: 0 4px 15px rgba(230, 184, 0, 0.2);
  }

  .newsletter-input {
    flex: 1;
    padding: 12px 15px;
    border: none;
    font-size: 14px;
    font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background-color: white;
    color: var(--deep-charcoal);
  }

  .newsletter-input::placeholder {
    color: #999;
  }

  .newsletter-button {
    padding: 12px 20px;
    background: linear-gradient(135deg, var(--golden-yellow), var(--light-yellow));
    color: var(--deep-charcoal);
    border: none;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-weight: 700;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .newsletter-button:hover {
    background: linear-gradient(135deg, var(--light-yellow), var(--golden-yellow));
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(230, 184, 0, 0.4);
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 3px solid var(--golden-yellow);
    padding-top: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    background: linear-gradient(90deg, rgba(230, 184, 0, 0.1), rgba(240, 196, 32, 0.1));
    margin: 0 -20px;
    padding-left: 20px;
    padding-right: 20px;
    border-radius: 10px 10px 0 0;
    box-shadow: 0 -2px 10px rgba(230, 184, 0, 0.1);
    gap: 20px;
  }

  .footer-copyright {
    font-size: 14px;
    color: var(--soft-cream);
  }

  .footer-legal {
    display: flex;
    gap: 20px;
  }

  .legal-link {
    color: var(--golden-yellow);
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .legal-link:hover {
    color: var(--soft-coral);
    text-shadow: 0 0 10px rgba(255, 107, 107, 0.4);
    transform: translateY(-1px);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .newsletter-input-group {
      flex-direction: column;
    }

    .newsletter-input {
      border-radius: 6px 6px 0 0;
    }

    .newsletter-button {
      border-radius: 0 0 6px 6px;
    }
  }
</style>

<script>
  // Newsletter form functionality
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('.newsletter-form');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const email = this.querySelector('.newsletter-input').value;
        if (email) {
          const button = this.querySelector('.newsletter-button');
          const originalText = button.textContent;
          button.textContent = 'Subscribed!';
          button.style.backgroundColor = '#4CAF50';
          setTimeout(() => {
            button.textContent = originalText;
            button.style.background = '';
          }, 3000);
          this.querySelector('.newsletter-input').value = '';
        }
      });
    }
  });
</script>