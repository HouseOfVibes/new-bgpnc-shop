---
import heroImage from "../assets/2_BGP_Kids_HeroImage_Wide_Lightened_MuralBackdrop.png";
---

<section class="hero-section">
  <div class="hero-content">
    <h1 class="hero-headline">
      Where Believers and Dreamers Come Together in Style
    </h1>
    <p class="hero-subheadline">
      Discover clothing and accessories that celebrate faith, fuel dreams,
      and bring people together through style. Whether you’re a believer,
      a dreamer, or both – you belong here.
    </p>
    <div class="hero-cta-group">
      <a href="/shop" class="btn-primary">Shop the Collection</a>
    </div>
  </div>
</section>

<style>
  /* Hero Section with Background Image */
  .hero-section {
    background-image: url("https://shop.bgpnc.com/wp-content/uploads/2025/07/2_BGP_Kids_HeroImage_Wide_Lightened_MuralBackdrop.png");
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 60px 5%;
    overflow: hidden;
  }

  .hero-content {
    position: absolute;
    top: 40px;
    left: 5%;
    max-width: 800px;
    padding: 20px;
    z-index: 1;
  }

  .hero-headline {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 64px;
    color: var(--pure-white);
    text-shadow: 2px 2px 0px var(--deep-charcoal);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-subheadline {
    font-family: var(--font-body);
    font-weight: 400;
    font-size: 28px;
    color: var(--pure-white);
    text-shadow: 1px 1px 0px var(--deep-charcoal);
    line-height: 1.5;
    margin-bottom: 2.5rem;
    max-width: 600px;
  }

  .hero-cta-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .btn-primary {
    background-color: var(--golden-yellow);
    color: var(--deep-charcoal);
    padding: 16px 32px;
    border-radius: 6px;
    border: none;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(244, 208, 63, 0.3);
  }
  .btn-primary:hover {
    background-color: var(--light-yellow);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(244, 208, 63, 0.4);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 120vh;
      text-align: center;
      justify-content: center;
      padding: 60px 4% 120px;
    }
    .hero-content {
      position: relative;
      top: auto;
      left: auto;
      max-width: 95%;
      text-align: center;
    }
    .hero-headline { font-size: 42px; margin-bottom: 1rem; }
    .hero-subheadline { font-size: 22px; margin-bottom: 2rem; }
    .hero-cta-group {
      flex-direction: column;
      align-items: center;
    }
    .btn-primary {
      width: 100%;
      max-width: 280px;
      padding: 16px 24px;
    }
  }

  @media (max-width: 480px) {
    .hero-headline { font-size: 28px; }
    .hero-subheadline { font-size: 15px; }
    .hero-section { padding: 0 3%; }
  }

  /* Animation & Accessibility */
  .hero-content {
    animation: fadeInUp 1s ease-out;
  }
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to   { opacity: 1; transform: translateY(0); }
  }
  .btn-primary:focus {
    outline: 3px solid var(--golden-yellow);
    outline-offset: 2px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('Hero Image Source:', document.querySelector('.hero-section').style.backgroundImage);
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  });
</script>